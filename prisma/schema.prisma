generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Campaign {
  id          String         @id @default(uuid())
  seed        BigInt         @unique
  authority   String
  tokenMint   String
  packPrice   BigInt
  totalPacks  Int
  merkleRoot  String
  status      CampaignStatus @default(PENDING)
  publicKey   String?
  createdAt   DateTime       @default(now())
  confirmedAt DateTime?

  packs     Pack[]
  purchases Purchase[]
}

model Pack {
  id          String   @id @default(uuid())
  campaignId  String
  index       Int
  tokenAmount BigInt
  salt        String
  tier        String
  campaign    Campaign @relation(fields: [campaignId], references: [id])

  @@unique([campaignId, index])
}

model Purchase {
  id         String   @id @default(uuid())
  campaignId String
  buyer      String
  nonce      BigInt
  packIndex  Int
  signature  String
  createdAt  DateTime @default(now())
  campaign   Campaign @relation(fields: [campaignId], references: [id])

  @@unique([campaignId, buyer, nonce])
}

enum CampaignStatus {
  PENDING
  ACTIVE
  CLOSED
}
